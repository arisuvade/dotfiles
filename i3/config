# Set modifier keys. Super key and alt.
set $mod Mod4
set $alt Mod1

# Important startup application. Don't touch this.
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id nm-applet

# Kill, reload, and restart apps and config.
bindsym $mod+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Launch polybar and picom.
exec --no-startup-id $HOME/.config/polybar/launch.sh
exec --no-startup-id picom

# Set display resolution.
exec --no-startup-id xrandr --output eDP-1 --mode 1592x892_60.00

# Set wallpaper.
exec --no-startup-id feh --bg-fill /home/aries/Pictures/Wallpapers/arch.jpg

# Change mouse pointer speed.
exec --no-startup-id ~/GitHub/scripts/mouse-pointer-speed.sh

# Disable touchpad if there is a mouse.
exec --no-startup-id ~/GitHub/scripts/touchpad-automation/automate-touchpad.sh

# Pulseaudio echo cancellation.
exec --no-startup-id pulseaudio -k

# Take a screenshot.
bindsym Print exec xfce4-screenshooter -f -s /home/aries/Pictures/Screenshots/Screenshot_"$(date +%Y-%m-%d_%H-%M-%S)".png

# Toggle touchpad on/off.
bindsym Pause exec --no-startup-id ~/GitHub/scripts/touchpad-automation/on-off-touchpad.sh

# Open power menu.
bindsym Delete exec --no-startup-id bash /home/aries/.config/rofi/powermenu/type-1/powermenu.sh

# Open wifi menu. 
bindsym Insert exec bash /home/aries/.config/rofi/powermenu/type-1/wifimenu.sh

# Application keybindings.
bindsym $mod+Return exec --no-startup-id alacritty
bindsym $mod+d exec --no-startup-id "rofi -show drun"
bindsym $alt+f exec --no-startup-id thunar
bindsym $alt+l exec libreoffice
bindsym $alt+b exec brave -disk-cache-dir=Documents --disk-cache-size=104857600
bindsym $alt+c exec google-chrome-stable --new-window classroom.google.com
bindsym $alt+v exec code

# Adjust audio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status

# Adjust brightness.
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10

# Font for window titles.
font pango:Roboto Medium 10

# Drag windows to their wanted position.
floating_modifier $mod

# Change focus window.
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window.
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split to horizontal and vertical orientation to new window.
bindsym $mod+h split h
bindsym $mod+v split v

# Enter fullscreen mode for the focused window.
bindsym $mod+f fullscreen toggle

# Resize window.
mode "" {
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 1 px or 1 ppt
        bindsym Down resize grow height 1 px or 1 ppt
        bindsym Up resize shrink height 1 px or 1 ppt
        bindsym Right resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode ""

# Windows settings.
default_border pixel 4
gaps inner 4
gaps outer 1
smart_gaps on
hide_edge_borders smart
client.focused		#00BCD4 #000000 #DCDCDC #00BCD4 #3cb371 #00BCD4

# Setting workspaces.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switching to workspaces.
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused window to workspace.
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
