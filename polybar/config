[colors]
background = #00
foreground = #DFDFDF
primary = #00BCD4


[bar/bar1]
width = 100%
height = 20
offset-x = 1%
offset-y = 1%
radius = 0.0
fixed-center = true
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}


separator = |
separator-foreground = ${colors.background}
line-size = 3pt
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 1


font-0 = "Roboto Medium:size=10.5;2"
font-1 = "Font Awesome 6 Free Solid:size=10.5;2"
font-2 = "Font Awesome 6 Brands:size=12;2"
font-3 = "Font Awesome 6 Brands Regular:size=12;2"


modules-left = i3
modules-center = clock
modules-right = volume brightness


cursor-click = pointer
cursor-scroll = default
enable-ipc = true
tray-position = none
wm-restack = i3
; scroll-up = i3wm-wsprev
; scroll-down = i3wm-wsnext


[module/i3]
type = internal/i3
pin-workspaces = true
show-urgent = true
strip-wsnumbers = true
index-sort = true
enable-scroll = true
wrapping-scroll = false
fuzzy-match = true
format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.background}

label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 2


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-foreground = ${colors.foreground}


[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}


bar-progress-width = 45
bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}
bar-progress-indicator = |
bar-progress-indicator-foreground = #ff
bar-progress-indicator-font = 3
bar-progress-fill = ─
bar-progress-fill-foreground = #bb
bar-progress-fill-font = 3
bar-progress-empty = ─
bar-progress-empty-font = 3
bar-progress-empty-foreground = #44


[module/clock]
type = internal/date
interval = 60
date = %{F#00BCD4} %{F-}%I:%M %p
date-alt = %{F#00BCD4} %{F-}%b %d %a
label = %date%
label-foreground = ${colors.foreground}


[module/brightness]
type = internal/backlight
card = intel_backlight
use-actual-brightness = true
enable-scroll = true
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage%%


[module/volume]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = %{F#00BCD4}  %{F-}%percentage%%
label-muted = %{F#00BCD4} %{F-}0%
click-right = $TERMINAL pavucontrol &


[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98
label-charging = %{F#FF8C00} %{F-}%percentage%%
label-discharging = %{F#FF8C00} %{F-}%percentage%%
label-full = %{F#FF8C00} %{F-}%percentage%%


[module/youtube]
type = custom/script
interval = 3600
click-left = "brave -disk-cache-dir=Documents --disk-cache-size=104857600 -window https://youtube.com &"
exec = echo "%{F#00BCD4}"


[settings]
