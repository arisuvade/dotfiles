[colors]
background = #00
foreground = #DFDFDF
primary = #00BCD4

[bar/bar1]
width = 100%
height = 20
radius = 0.0
fixed-center = true
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
separator = |
separator-foreground = ${colors.background}
line-size = 2
padding-left = 0
padding-right = 1
module-margin-left = 1
module-margin-right = 0

font-0 = "Roboto-Bold:size=10.5;1"
font-1 = "Font Awesome 6 Free Solid:size=11;1"

modules-left = i3
modules-center = rofi thunar alacritty brave vscodium chrome libreoffice
modules-right = volume brightness

cursor-click = pointer
cursor-scroll = default
enable-ipc = true
tray-position = none
wm-restack = i3

; LEFT MODULES
[module/i3]
type = internal/i3
pin-workspaces = true
show-urgent = true
strip-wsnumbers = true
index-sort = true
enable-scroll = true
wrapping-scroll = false
fuzzy-match = true
format = <label-state> <label-mode>
label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.background}
label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.primary}
label-focused-padding = 2
label-unfocused = %name%
label-unfocused-padding = 2

; MIDDLE MODULES
[module/date]
type = internal/date
interval = 60
date = %{F#00BCD4} %{F-}%I:%M %p
date-alt = %{F#00BCD4} %{F-}%a %b %d
label = %date%
label-padding = 3

[module/rofi]
type = custom/script
exec = echo "Rofi"
click-left = rofi -show drun &

[module/thunar]
type = custom/script
exec = echo "Thunar"
click-left = thunar &

[module/alacritty]
type = custom/script
exec = echo "Alacritty"
click-left = alacritty &

[module/brave]
type = custom/script
exec = echo "Brave"
click-left = brave --enable-low-end-device-mode &

[module/vscodium]
type = custom/script
exec = echo "VSCodium"
click-left = vscodium ~/Documents/codes.code-workspace &

[module/chrome]
type = custom/script
exec = echo "Chrome"
click-left = google-chrome-stable --new-window classroom.google.com &

[module/libreoffice]
type = custom/script
exec = echo "LibreOffice"
click-left = libreoffice &


; RIGHT MODULES
[module/volume]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = %{F#00BCD4}  %{F-}%percentage%%
label-muted = %{F#00BCD4} %{F-}0%
click-right = $TERMINAL pavucontrol &

[module/brightness]
type = internal/backlight
card = intel_backlight
use-actual-brightness = true
enable-scroll = true
label = %{F#00BCD4}%{F-} %percentage%%

[settings]
screenchange-reload = true
pseudo-transparency = true
