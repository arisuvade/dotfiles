[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-foreground = ${colors.primary}


[module/memory]
type = internal/memory
interval = 2
warn-percentage = 80
format-prefix = " "
format-prefix-foreground = ${colors.primary}
#label = %percentage_used:2%%
label = %mb_used%/%mb_total% (%percentage_used%%)


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage:2%%


[module/temperature]
type = internal/temperature
interval = 0.5
format-prefix = " "
format-prefix-foreground = ${colors.primary}
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input
base-temperature = 20
warn-temperature = 60


[module/upt] 
type = custom/script
exec = uptime --pretty | cut -c 4- | sed "s/^/%{F#00BCD4} %{F-} /"
interval = 60


[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}%ifname%%{F#707880} disconnected

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %{F#00BCD4} %{F-}%{A1:nm-connection-editor:}%essid%%{A}  %{F#00BCD4} %{F-}%downspeed:9%  %{F#00BCD4}%{F-}%upspeed:9%


[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 101
label-charging = %{F#00BCD4}  %{F-}%percentage%%
label-discharging = %{F#00BCD4}  %{F-}%percentage%%
label-full = %{F#00BCD4}  %{F-}%percentage%%
label-low = %{F#00BCD4}  %{F-f}%percentage%%


[module/backlight]
type = internal/backlight
card = intel_backlight
use-actual-brightness = true
enable-scroll = true
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage%%


[module/pulseaudio]
type = internal/pulseaudio
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.primary}
format-volume = <label-volume>
label-volume = %percentage%%
label-muted =  MUTED
label-muted-foreground = ${colors.primary}


[module/date]
type = internal/date
format-prefix = " "
format-prefix-foreground = ${colors.primary}
interval = 1
date = %b %d %a
#date-alt = %Y-%m-%d


[module/time]
type = internal/date
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.primary}
date = %I:%M %p %{F#FF8C00}
#date-alt = %Y-%m-%d
label = %date%
label-foreground = ${colors.foreground}


